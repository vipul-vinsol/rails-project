<h3>Profile details edit page</h3>
<br /><br />

<% if @profile.avatar.attached? %>
  <%= image_tag @profile.avatar %>
<% end %>

<br />
<%= form_for @profile, url: user_profile_url, html: { multipart: true } do |f| %>
  <%= f.label :avatar %>:
  <%= f.file_field :avatar %>
  <br />
  <%= f.submit %>
<% end %>